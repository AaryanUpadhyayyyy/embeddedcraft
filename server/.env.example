# Nudge-Flow Server Configuration

# Server Port
PORT=4000

# Authentication Configuration
# Set to 'true' to require API key authentication on all endpoints
# Set to 'false' for local development (no auth required)
AUTH_REQUIRED=false

# API Keys (comma-separated)
# Admin keys: Full CRUD access to campaigns, feature flags, analytics
ADMIN_API_KEYS=admin-key-123,admin-key-456

# Client keys: Read campaigns, write events/identify only
CLIENT_API_KEYS=demo-api-key-123,client-key-789

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration (comma-separated origins)
# Use '*' for development, specific domains for production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:8081

# Security
# Set to 'true' in production to enable helmet.js security headers
HELMET_ENABLED=false
